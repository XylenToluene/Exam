<Window x:Class="RulbWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RulbWPF"
        mc:Ignorable="d"
        FontFamily="Comic Sans MS"
        Title="Окно авторизации" Height="450" Width="800" MinHeight="450" MinWidth="600" Icon="\Icons\icon.ico">
    <Grid>
        <StackPanel Margin="140,50,140,50">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Image Height="30" Width="30" Source="\Icons\logo.png"></Image>
                <Label VerticalAlignment="Center">ООО"Руль"</Label>
            </StackPanel>
            <Label>Логин</Label>
            <TextBox x:Name="tbLogin" Margin="5" ></TextBox>
            <Label>Пароль</Label>
            <PasswordBox x:Name="tbPassword" Margin="5" ></PasswordBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btLogIn" Click="btLogIn_Click"
                        Height="30" Width="100" >Войти</Button>
                <Button x:Name="btLogInGuest" Click="btLogInGuest_Click" Margin="10"
                        Height="30" Width="100" >Войти как гость</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
